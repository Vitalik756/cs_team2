@model IEnumerable<xManik.Models.Chanel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Network)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubscribersNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvgViewNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvgLikeNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocalRank)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.UserProfile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Network)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscribersNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgViewNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgLikeNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserProfile.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChanelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChanelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChanelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
