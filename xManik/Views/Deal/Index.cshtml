@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_UserProfileMenuPartial.cshtml";
}
@model IEnumerable<Deal>
<h2>Index</h2>

<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
    @foreach (var item in Model)
    {
        <div class="well well-sm card">
            <div class="card-body">
                <h3 class="card-title">
                   @if(User.IsInRole("Client"))
                   {
                       @:Deal from:
                        <a asp-controller = "UserProfile" asp-action = "UserProfile" asp-route-id = "@item.BloggerId" > User </a>
                   }
                   else if(User.IsInRole("Blogger"))
                   {
                        @:Deal for:
                        <a asp-controller = "UserProfile" asp-action = "UserProfile" asp-route-id = "@item.ClientId" > User </a>
                   }
               </h3>
                <h4>@item.Assigment.DetailedDescription</h4>
                <h4>@item.Assigment.Network</h4>
                <h4>@item.Assigment.Type</h4>
                <h5><a asp-controller="Deal" asp-action="Details" asp-route-id="@item.DealId">More details</a></h5>
            </div>
        </div>
    }
</div>